@article{revazDynamicalChemicalEvolution2012,
  ids = {revazDynamicalChemicalEvolution2012c},
  title = {The {{Dynamical}} and {{Chemical Evolution}} of {{Dwarf Spheroidal Galaxies}} with {{GEAR}}},
