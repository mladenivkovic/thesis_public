@article{springelPurSiMuove2010,
  title = {E Pur Si Muove: {{Galiliean-invariant}} Cosmological Hydrodynamical Simulations on a Moving Mesh},
  shorttitle = {E Pur Si Muove},
  author = {Springel, Volker},
