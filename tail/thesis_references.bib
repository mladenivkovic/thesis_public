@article{kauffmannClusteringGalaxiesHierarchical1999,
  title = {Clustering of Galaxies in a Hierarchical Universe - {{I}}. {{Methods}} and Results at Z=0},
  author = {Kauffmann, Guinevere and Colberg, Jorg M. and Diaferio, Antonaldo and White, Simon D. M.},
  year = {1999},
