@article{bakelsPreprocessingGroupAccretion2021,
  title = {Pre-Processing, Group Accretion and the Orbital Trajectories of Associated Subhaloes},
  author = {Bakels, Lucie and Ludlow, Aaron D. and Power, Chris},
