  file = {/home/mivkov/Zotero/storage/FQAR6UMQ/Agertz et al_2007_Fundamental differences between SPH and grid methods.pdf}
}

@article{ahnDoesRadiativeFeedback2007,
  title = {Does Radiative Feedback by the First Stars Promote or Prevent Second Generation Star Formation?},
  author = {Ahn, K. and Shapiro, P. R.},
